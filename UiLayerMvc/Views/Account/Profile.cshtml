      </div>
     
      <div class="gallery">
          @foreach (var post in Model.Posts)
          {
              <div class="gallery-item" >
                  <a href="/post/delete/@post.PostId" class="btn-close"></a>
                  <a href="/post/view/@post.PostId">
                        <img class="post-img" alt="gallery-post" src="@post.PostImagePath"/>
                 </a>
            </div>

          }
      </div>
    </main>

